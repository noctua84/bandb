{{ template "base" . }}

{{ define "content" }}
    {{ $res := index .Data "reservation"}}
    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="mt-5">Reservation Summary</h1>
                <hr>
                <table class="table table-striped table-hover table-sm">
                    <thead></thead>
                    <tbody>
                    <tr>
                        <th>Name: </th>
                        <td>{{ $res.FirstName }} {{ $res.LastName }}</td>
                    </tr>
                    <tr>
                        <td>Arrival: </td>
                        <td></td>
                    </tr>
                    <tr>
                        <td>Departure: </td>
                        <td></td>
                    </tr>
                    <tr>
                        <th>Email: </th>
                        <td>{{ $res.Email }}</td>
                    </tr>
                    <tr>
                        <th>Phone: </th>
                        <td>{{ $res.Phone }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{{ end }}

{{ define "js" }}

{{ end }}